<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@drawable/income_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO J'IBI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="200dp"
            android:layout_gravity="center" />

        <!-- About Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/password_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/login_icon"
                    android:layout_marginRight="5dp"
                    android:contentDescription="Username Icon"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/input_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:hint="e.g. Marouane@email.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_frame"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Champ pour le Password -->
            <LinearLayout
                android:id="@+id/password_champs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/password_icon"
                    android:contentDescription="Password Icon"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@drawable/input_frame"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Champ pour le Button send-->
            <Button
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Log In"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_style_income"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:elevation="4dp"
                android:layout_marginTop="16dp" />

            <!-- Sign Up Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/text_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not a member?  "
                    android:textColor="#0B8E81"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/text_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_text"
                    android:textColor="#22BCAD"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>