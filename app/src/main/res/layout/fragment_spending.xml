<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/income_background"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- Placeholders for content -->
        </LinearLayout>

        <!-- About Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPENDING"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center" />

            <!-- Value Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/input_spend"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/input_frame"
                    android:fontFamily="sans-serif"
                    android:hint="Enter spending value"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="0dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Logement avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_logement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logement"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Nourriture avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_nourriture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nourriture"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Transport avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transport"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Scolarité avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_scolarite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scolarite"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Santé avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_sante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sante"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Vêtements avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_vetements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vetements"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                    <!-- Autres avec une icône -->
                    <RadioButton
                        android:id="@+id/radio_autres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autres"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_bus" /> <!-- Icône à gauche -->

                </RadioGroup>
            </LinearLayout>



            <!-- Validation Button -->
            <Button
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:background="@drawable/button_style_spending"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="2dp"
                android:text="Valider"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>